<body>
    <div class="lightning"></div>
    <div class="flash" id="flash"></div>

    <div class="container">
        <h1>HTML Nyuri</h1>
        
        <p class="warning">PERINGATAN: Pengambilan konten dari website lain mungkin melanggar kebijakan penggunaan atau hukum setempat. Gunakan dengan tanggung jawab.</p>
        
        <div class="input-group">
            <input type="url" id="urlInput" placeholder="Masukkan URL (contoh: https://example.com)" required>
            <button onclick="fetchHTML()">Ambil HTML</button>
        </div>
        
        <div class="result" id="result">
            <p>Hasil HTML akan muncul di sini...</p>
        </div>
        
        <footer>
            Website Pengambil HTML &copy; 2023
        </footer>
    </div>

    <script>
        // Fungsi untuk mengambil HTML
        async function fetchHTML() {
            const url = document.getElementById('urlInput').value.trim();
            const resultDiv = document.getElementById('result');
            
            if (!url) {
                resultDiv.innerHTML = '<p style="color: #f44;">Silakan masukkan URL yang valid</p>';
                return;
            }
            
            try {
                // Tambahkan efek flash
                triggerFlash();
                
                // Tambahkan https:// jika tidak ada
                let fetchUrl = url;
                if (!url.startsWith('http://') && !url.startsWith('https://')) {
                    fetchUrl = 'https://' + url;
                }
                
                resultDiv.innerHTML = '<p>Mengambil HTML dari ' + fetchUrl + '...</p>';
                
                // Gunakan proxy CORS untuk menghindari masalah CORS
                const proxyUrl = `https://api.allorigins.win/get?url=${encodeURIComponent(fetchUrl)}`;
                
                const response = await fetch(proxyUrl);
                const data = await response.json();
                
                if (data.contents) {
                    resultDiv.innerHTML = '<pre>' + escapeHTML(data.contents) + '</pre>';
                } else {
                    resultDiv.innerHTML = '<p style="color: #f44;">Gagal mengambil HTML. Error: ' + (data.error || 'Tidak diketahui') + '</p>';
                }
            } catch (error) {
                resultDiv.innerHTML = '<p style="color: #f44;">Error: ' + error.message + '</p>';
            }
        }
        
        // Fungsi untuk escape HTML
        function escapeHTML(html) {
            return html.replace(/&/g, "&amp;")
                       .replace(/</g, "&lt;")
                       .replace(/>/g, "&gt;")
                       .replace(/"/g, "&quot;")
                       .replace(/'/g, "&#039;");
        }
        
        // Fungsi untuk efek flash petir
        function triggerFlash() {
            const flash = document.getElementById('flash');
            flash.style.opacity = '0.7';
            flash.style.transition = 'opacity 0.1s';
            
            setTimeout(() => {
                flash.style.opacity = '0';
                flash.style.transition = 'opacity 0.5s';
            }, 100);
            
            // Random lightning timing
            setTimeout(() => {
                flash.style.opacity = '0.4';
                flash.style.transition = 'opacity 0.05s';
                
                setTimeout(() => {
                    flash.style.opacity = '0';
                    flash.style.transition = 'opacity 0.3s';
                }, 50);
            }, Math.random() * 300 + 100);
        }
        
        // Efek petir acak
        setInterval(() => {
            if (Math.random() > 0.7) {
                triggerFlash();
            }
        }, 8000);
    </script>
</body>
</html>
